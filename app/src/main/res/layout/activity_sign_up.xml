<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAEA6"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/logo"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/create_acc"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password">
    <requestFocus />
</EditText>

    <TextView
        android:id="@+id/name_error"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/name"
        android:layout_alignLeft="@id/name"
        android:layout_alignRight="@id/name"
        android:contentDescription="@null"
        android:textSize="12sp"
        android:textColor="#ee0000"
        android:text="@string/name_error"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:hint="@string/email_id"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"/>

    <TextView
        android:id="@+id/email_error"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/email"
        android:layout_alignLeft="@id/name"
        android:layout_alignRight="@id/name"
        android:contentDescription="@null"
        android:textSize="12sp"
        android:textColor="#ee0000"
        android:text="@string/email_error"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#242424"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/password_error"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/password"
        android:layout_alignLeft="@id/name"
        android:layout_alignRight="@id/name"
        android:contentDescription="@null"
        android:textSize="12sp"
        android:textColor="#ee0000"
        android:text="@string/password_error"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/mob_no"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:hint="@string/mob_no"
        android:inputType="phone"
        android:textSize="14sp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"/>

    <TextView
        android:id="@+id/mob_no_error"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/mob_no"
        android:layout_alignLeft="@id/name"
        android:layout_alignRight="@id/name"
        android:contentDescription="@null"
        android:textSize="12sp"
        android:textColor="#ee0000"
        android:text="@string/mob_no_error"
        android:visibility="gone"/>

    <Button

        android:id="@+id/sign_up"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/arrow_sign_in"
        android:drawableEnd="@drawable/arrow_sign_in"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:background="#4bada5"
        android:layout_below="@+id/mob_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/register_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:text="@string/register_user" />

    <TextView
        android:id="@+id/login_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:textStyle="bold"
        android:text="@string/login_here"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/register_user"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_user"
        android:layout_centerHorizontal="true"
        android:text="@string/bottom_text"
        android:layout_marginTop="5dp"/>

</RelativeLayout>